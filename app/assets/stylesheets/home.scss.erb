.hero {
  width: 100wh;
  height: 300px;
  color: #fff;
  background: linear-gradient(-45deg, #EE7752, #E73C7E, #23A6D5, #23D5AB);
  padding: 6em 0 0 0;
  color: white;
  margin-bottom: 0px;
  div.ui.header {
    // width: 690px;
    margin: 0 auto;
    color: #fff;
    font-family: 'Exo 2', sans-serif;
    font-display: auto;
    line-height: 200%;
    font-weight: normal;
    font-size: 40px;
    text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.8);
    span {
      color: gold;
      font-size: 1.3em;
    }
    span.tag {
      color: #f0f6a1;
    }
    .sub.header {
      font-family: 'Raleway', sans-serif;
      font-display: auto;
      font-size: 0.625em;
      color: rgba(255, 255, 255, 0.8);
    }
  }
}

.home-desc {
  h3 {
    font-family: 'Raleway', sans-serif;
    font-display: auto;
    font-size: 1.5em;   
    margin-top: 0.5em;
    margin-bottom: 0.5em; 
  }
  .row {
    margin-bottom: 2em;
  }
}

